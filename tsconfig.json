{
    "include": [
        "src"
    ],
    "exclude": [
        "./node_modules"
    ],
    "compilerOptions": {
        "strict": true,
        "target": "es2018",
        "outDir": "./dist",
        "module": "es2020",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["ES2020"],
        "declaration": true,
        "esModuleInterop": true,
        "baseUrl": "./src/",
    }
}